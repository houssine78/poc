<odoo>
    <record id="partner_record_form_view" model="ir.ui.view">
        <field name="name">partner record</field>
        <field name="model">partner.record</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
	                <group>
		                <group>
		                    <field name="name" string="Name" />
		                    <field name="representative_id" />
		                    <field name="date_start"/>
		                    <field name="date_end"/>
		                </group>
		                <group>
		                    <field name="active" invisible="1" />
		                    <field name="recurring_rule_type"/>
		                    <field name="structured_comm"/>
		                </group>
	                </group>
	                <notebook>
	                   <page name="contract" string="Contracts">
	                       <field name="contract_ids" />
	                   </page>
	                </notebook>
               </sheet>
            </form>
        </field>
    </record>

    <record id="partner_record_tree_view" model="ir.ui.view">
        <field name="name">partner.record tree view</field>
        <field name="model">partner.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name" />
                <field name="representative_id" />
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="recurring_rule_type"/>
                <field name="active" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="partner_record_search_view" model="ir.ui.view">
        <field name="name">partner.record search view</field>
        <field name="model">partner.record</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"
                />
            </search>
        </field>
    </record>

    <record id="action_partner_record" model="ir.actions.act_window">
        <field name="name">Partner records</field>
        <field name="res_model">partner.record</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="partner_record_search_view" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new partner record.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_partner_record"
        parent="account.menu_finance_receivables"
        action="action_partner_record"
        sequence="100"
    />
</odoo>